@model IEnumerable<PBL3.Models.Student>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HoTen) <!-- Đổi TenHS -> HoTen -->
            </th>
            <!-- Giữ nguyên các cột khác -->
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.HoTen) 
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID_SV">Edit</a> | 
                    <a asp-action="Details" asp-route-id="@item.ID_SV">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID_SV">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
