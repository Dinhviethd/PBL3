@model PBL3.Models.Staff

@{
    ViewData["Title"] = "Xóa Nhân Viên";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">Xóa Nhân Viên</h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <h5>Bạn có chắc chắn muốn xóa nhân viên này?</h5>
                    </div>
                    <dl class="row">
                        <dt class="col-sm-3">Họ Tên</dt>
                        <dd class="col-sm-9">@Model.HoTen</dd>

                        <dt class="col-sm-3">Email</dt>
                        <dd class="col-sm-9">@Model.Email</dd>

                        <dt class="col-sm-3">Số Điện Thoại</dt>
                        <dd class="col-sm-9">@Model.PhoneNumber</dd>

                        <dt class="col-sm-3">Địa Chỉ</dt>
                        <dd class="col-sm-9">@Model.DiaChi</dd>
                    </dl>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger">Xóa</button>
                        <a asp-action="Index" class="btn btn-secondary">Quay Lại</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 