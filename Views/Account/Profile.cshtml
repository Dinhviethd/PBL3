@model PBL3.Models.ViewModel.ProfileViewModel
@{
    ViewData["Title"] = "Profile";
    var isStudent = Model.Role == "Student";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Trang Cá Nhân"] - PBL3</title>
    <link rel="stylesheet" href="~/css/profile.css" asp-append-version="true" />

</head>
<body>
    <div class="profile-container">
            <div class="profile-panel-left">
                <div class="profile-avatar">
                <img src="~/images/default-avatar.png" alt="Profile Picture" />
                </div>
                <div class="profile-info">
                <h2>@Model.HoTen</h2>
                <p>@Model.Email</p>
                <p>@Model.Role</p>
            </div>
        </div>

            <div class="profile-panel-right">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success">
                    @TempData["Success"]
                </div>
            }

                <div class="profile-form" id="personal-info-form">
                    <h1>Thông tin cá nhân</h1>
                <form asp-action="Profile" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="form-row">
                            <div class="form-group third-width">
                            <label asp-for="HoTen"></label>
                            <input asp-for="HoTen" class="form-control" />
                            <span asp-validation-for="HoTen" class="text-danger"></span>
                            </div>
                            <div class="form-group third-width">
                            <label asp-for="Email"></label>
                            <input asp-for="Email" class="form-control" readonly />
                            <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="form-group third-width">
                            <label asp-for="SDT"></label>
                            <input asp-for="SDT" class="form-control" />
                            <span asp-validation-for="SDT" class="text-danger"></span>
                        </div>
                    </div>

                        @if (isStudent)
                        {
                            <div class="form-row">
                                <div class="form-group half-width">
                                <label asp-for="MSSV"></label>
                                <input asp-for="MSSV" class="form-control" />
                                <span asp-validation-for="MSSV" class="text-danger"></span>
                                </div>
                                <div class="form-group half-width">
                                <label asp-for="Lop"></label>
                                <input asp-for="Lop" class="form-control" />
                                <span asp-validation-for="Lop" class="text-danger"></span>
                            </div>
                        </div>

                        <h2>Thông tin vé giữ xe</h2>
                            <div class="form-row">
                            <div class="form-group half-width">
                                <label asp-for="BienSoXe"></label>
                                <input asp-for="BienSoXe" class="form-control" readonly />
                                </div>
                            <div class="form-group half-width">
                                <label asp-for="ViTriGui"></label>
                                <input asp-for="ViTriGui" class="form-control" readonly />
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group half-width">
                                <label asp-for="NgayDangKy"></label>
                                <input asp-for="NgayDangKy" class="form-control" readonly />
                            </div>
                            <div class="form-group half-width">
                                <label asp-for="NgayHetHan"></label>
                                <input asp-for="NgayHetHan" class="form-control" readonly />
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="form-group half-width">
                                <label asp-for="Price"></label>
                                <input asp-for="Price" class="form-control" readonly />
                            </div>
                        </div>
                    }
                    else if (Model.Role == "Staff")
                    {
                        <div class="form-group">
                            <label asp-for="DiaChi"></label>
                            <input asp-for="DiaChi" class="form-control" />
                            <span asp-validation-for="DiaChi" class="text-danger"></span>
                        </div>
                    }

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Cập nhật</button>
                        </div>
                    </form>
            </div>
        </div>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>