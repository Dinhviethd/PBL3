@model PBL3.Models.ViewModel.StaffRegisterViewModel

@{
    ViewData["Title"] = "Quản Lý Nhân Viên";
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="~/css/admin/QLSV.css" asp-append-version="true" />
</head>
<body>
    <div class="dashboard">
        <div class="dashboard-container">
            <div class="dashboard-content">
                <main class="main-content">
                    <!-- Search Section -->
                    <section class="search-section">
                        <h2 class="section-title">Tìm kiếm nhân viên</h2>
                        <form method="get" class="search-form">
                            <select name="searchType" class="form-control">
                                <option value="Name" selected>Họ và tên</option>
                                <option value="Email">Email</option>
                                <option value="Phone">Số điện thoại</option>
                                <option value="Address">Địa chỉ</option>
                            </select>
                            <input type="text" name="searchValue" class="form-control" placeholder="Nhập từ khóa tìm kiếm..." value="@ViewBag.SearchValue" />
                            <button type="submit" class="btn btn-primary">Tìm kiếm</button>
                        </form>
                    </section>

                    <div class="table-container">
                        <table class="results-table">
                            <thead>
                                <tr>
                                    <th>Họ và tên</th>
                                    <th>Email</th>
                                    <th>Số điện thoại</th>
                                    <th>Địa chỉ</th>
                                    <th>Thao tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var staff in Model.Staffs)
                                {
                                    <tr>
                                        <td>@staff.HoTen</td>
                                        <td>@staff.Email</td>
                                        <td>@staff.PhoneNumber</td>
                                        <td>@staff.DiaChi</td>
                                        <td>
                                            <a asp-action="EditStaff" asp-route-id="@staff.Id" class="btn-edit">Sửa</a>
                                            <a asp-action="ConfirmDeleteStaff" asp-route-id="@staff.Id" class="btn-delete">Xóa</a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </main>
            </div>
        </div>
    </div>
</body>
</html>

