@model PBL3.Models.ViewModel.RegisterViewModel

@{
    ViewData["Title"] = "Đăng Ký Tài Khoản";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng Ký Tài Khoản</title>
    <link rel="stylesheet" href="~/css/admin/register.css" asp-append-version="true" />
</head>
<body>
    <div class="container">
        <form asp-action="Register" method="post" class="create-account-form">
            <h1 class="form-title">Đăng Ký Tài Khoản</h1>

            <div class="user-type-toggle">
                <input type="radio" name="Role" id="student" value="Student" checked>
                <label for="student" class="toggle-button">Sinh viên</label>

                <input type="radio" name="Role" id="staff" value="Staff">
                <label for="staff" class="toggle-button">Nhân viên</label>
            </div>

            <div class="form-group">
                <label for="HoTen">Họ và tên</label>
                <input type="text" 
                       id="HoTen" 
                       name="HoTen" 
                       asp-for="HoTen"
                       placeholder="Nhập họ và tên" 
                       required>
                <span asp-validation-for="HoTen" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="Email">Email</label>
                <input type="email"
                       id="Email"
                       name="Email"
                       asp-for="Email"
                       placeholder="Nhập email"
                       title="Vui lòng nhập địa chỉ email hợp lệ">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="SDT">Số điện thoại</label>
                <input type="tel"
                       id="SDT"
                       name="SDT"
                       asp-for="SDT"
                       placeholder="Nhập số điện thoại"
                       required
                       pattern="[0-9]{10}"
                       title="Vui lòng nhập số điện thoại 10 chữ số">
                <span asp-validation-for="SDT" class="text-danger"></span>
            </div>

            <!-- Student specific fields -->
            <div id="student-fields">
                <div class="form-group">
                    <label for="MSSV">Mã số sinh viên</label>
                    <input type="text"
                           id="MSSV"
                           name="MSSV"
                           placeholder="Nhập mã số sinh viên"
                           required>
                </div>

                <div class="form-group">
                    <label for="Lop">Lớp</label>
                    <input type="text"
                           id="Lop"
                           name="Lop"
                           placeholder="Nhập lớp"
                           required>
                </div>
            </div>

            <!-- Staff specific fields -->
            <div id="staff-fields" style="display: none;">
                <div class="form-group">
                    <label for="DiaChi">Địa chỉ</label>
                    <input type="text"
                           id="DiaChi"
                           name="DiaChi"
                           placeholder="Nhập địa chỉ"
                           required>
                </div>
            </div>
            
            <div class="form-group">
                <label for="Password">Mật khẩu</label>
                <input type="password"
                       id="Password"
                       name="Password"
                       asp-for="Password"
                       placeholder="Nhập mật khẩu"
                       required
                       minlength="8"
                       title="Mật khẩu phải có ít nhất 8 ký tự">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="ConfirmPassword">Xác nhận mật khẩu</label>
                <input type="password"
                       id="ConfirmPassword"
                       name="ConfirmPassword"
                       asp-for="ConfirmPassword"
                       placeholder="Xác nhận mật khẩu"
                       required>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="submit-button">Đăng ký</button>
        </form>
    </div>

    <script src="~/js/admin/register.js" asp-append-version="true"></script>
    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>