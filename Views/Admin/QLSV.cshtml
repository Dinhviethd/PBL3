@model PBL3.Models.ViewModel.RegisterStudentViewModel

@{
    ViewData["Title"] = "Quản Lý Sinh Viên";
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="~/css/admin/QLSV.css" asp-append-version="true" />
</head>
<body>
    <div class="dashboard">
        <div class="dashboard-container">
            <div class="dashboard-content">

                <main class="main-content">
                    <!-- User Creation Form -->
                    <section class="form-section">
                        <h2 class="section-title">Tạo tài khoản người dùng</h2>
                        <form id="userForm" class="user-form">
                            <div class="form-grid">
                                <div class="form-column">
                                    <div class="form-group">
                                        <label>Họ và tên</label>
                                        <input type="text" name="fullName" />
                                    </div>
                                    <div class="form-group">
                                        <label>Số điện thoại</label>
                                        <input type="tel" name="phone" />
                                    </div>
                                    <div class="form-group">
                                        <label>Email</label>
                                        <input type="email" name="email" />
                                    </div>
                                </div>
                                <div class="form-column">
                                    <div class="form-group">
                                        <label>MSSV</label>
                                        <input type="text" name="id" />
                                    </div>
                                    <div class="form-group">
                                        <label>Lớp</label>
                                        <input type="text" name="class" />
                                    </div>
                                    <div class="form-group">
                                        <label>Mật khẩu</label>
                                        <input type="password" name="password" />
                                    </div>
                                    <div class="form-group">
                                        <label>Xác Nhận Mật khẩu</label>
                                        <input type="password" name="password" />
                                    </div>
                                </div>
                            </div>
                            <div class="form-actions">
                                <button type="submit" class="btn-primary">
                                    Tạo tài khoản
                                </button>
                            </div>
                        </form>
                    </section>

                    <!-- Search Section -->
                    <section class="search-section">
                        <h2 class="section-title">Tìm kiếm người dùng</h2>
                        <div class="search-form">
                            <input type="text" placeholder="Tên" class="search-input" />
                            <input type="text" placeholder="Lớp" class="search-input" />
                            <input type="text" placeholder="MSSV" class="search-input" />
                            <input type="text"
                                   placeholder="Số điện thoại"
                                   class="search-input" />
                        </div>
                        <div class="search-actions">
                            <button class="btn-primary search-btn">
                                <img src="https://cdn.builder.io/api/v1/image/assets/TEMP/19e0d15c42d628e2727522e0a4e7e32021b5dcb4?placeholderIfAbsent=true&apiKey=a94898cdbac34dc4b261ff4175f2b5c2" alt="Search Icon" class="search-icon" />
                                <span>Tìm kiếm</span>
                            </button>
                        </div>
                    </section>

                    <!-- Results Section -->
                    <section class="results-section">
                        <div class="results-header">
                            <h2 class="section-title">Kết quả tìm kiếm</h2>
                            <div class="display-options">
                                <label>Hiển thị:</label>
                                <img src="https://cdn.builder.io/api/v1/image/assets/TEMP/37fc1fd79c06f9948be96939f728c02933544c14?placeholderIfAbsent=true&apiKey=a94898cdbac34dc4b261ff4175f2b5c2"
                                     alt="Display Options"
                                     class="display-select" />
                            </div>
                        </div>

                        <div class="table-container">
                            <table class="results-table">
                                <thead>
                                    <tr>
                                        <th>Họ và tên</th>
                                        <th>MSSV</th>
                                        <th>Lớp</th>
                                        <th>Email</th>
                                        <th>Số điện thoại</th>
                                        <th>Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>Nguyễn Văn A</td>
                                        <td>20110100</td>
                                        <td>20TCLC_DT2</td>
                                        <td>nva@example.com</td>
                                        <td>0123456789</td>
                                        <td>
                                            <img src="https://cdn.builder.io/api/v1/image/assets/TEMP/a661f2fd88434a440242989e4c91d1887ae5fba3?placeholderIfAbsent=true&apiKey=a94898cdbac34dc4b261ff4175f2b5c2"
                                                 alt="Actions"
                                                 class="action-buttons" />
                                        </td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                        <div class="pagination-section">
                            <div class="results-count">
                                Hiển thị 1-10 trong tổng số 50 kết quả
                            </div>
                            <div class="pagination">
                                <button class="page-btn prev">
                                    <img src="https://cdn.builder.io/api/v1/image/assets/TEMP/adafdf7ee858b74093a15bea5ae8cf14cc376519?placeholderIfAbsent=true&apiKey=a94898cdbac34dc4b261ff4175f2b5c2" alt="Previous" />
                                </button>
                                <button class="page-btn active">1</button>
                                <button class="page-btn">2</button>
                                <button class="page-btn">3</button>
                                <button class="page-btn next">
                                    <img src="https://cdn.builder.io/api/v1/image/assets/TEMP/8b91c7be0c13d93385ec3d0f3f6a510befcbfdb4?placeholderIfAbsent=true&apiKey=a94898cdbac34dc4b261ff4175f2b5c2" alt="Next" />
                                </button>
                            </div>
                        </div>
                    </section>
                </main>
            </div>
        </div>
    </div>
</body>
</html>
