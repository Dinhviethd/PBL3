<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PBL3</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PBL3.styles.css" asp-append-version="true" />
</head>
<body>
    <div id="_header"></div>
    <div class="icon_container">
        <div class="icon">
            <div class="icon_left">  
            <img src="https://upload.wikimedia.org/wikipedia/vi/thumb/7/72/Tr%C6%B0%E1%BB%9Dng_%C4%90%E1%BA%A1i_h%E1%BB%8Dc_B%C3%A1ch_khoa%2C_%C4%90%E1%BA%A1i_h%E1%BB%8Dc_%C4%90%C3%A0_N%E1%BA%B5ng.svg/2048px-Tr%C6%B0%E1%BB%9Dng_%C4%90%E1%BA%A1i_h%E1%BB%8Dc_B%C3%A1ch_khoa%2C_%C4%90%E1%BA%A1i_h%E1%BB%8Dc_%C4%90%C3%A0_N%E1%BA%B5ng.svg.png" alt="DUT's Logo'" />
            <span>SmartParking</span>
            </div>
            <ul>
                <li><a href="#_header">Home</a></li>
                <li><a href="#About">About</a></li>
                <li><a href="#Testimonials">Guide</a></li>
                <li><a href="#Work">Work</a></li>
                <li><a href="#team">Team</a></li>
                <li><a href="#Features">Features</a></li>
                <li><a href="#pricing">Pricing</a></li>
                <a href="#contact" class="button">Sign Up</a>
            </ul>
            <i class="fa-solid fa-bars" id="menu_button"></i>
        </div>
    </div>
    <div class="main">
        <div class="content">
            <div class="flex-container">
                <!-- Left Panels -->
                <div class="left-panels">
                    <div class="QLX-panel">
                        <div class="QLX-panel-content">
                            <h1> THÔNG TIN XE </h1>
                            <label for="nameCX">Họ và tên chủ xe:</label><br>
                            <input type="text" id="nameCX" name="nameCX"><br><br>
                            <label for="MSSV">Mã số sinh viên:</label><br>
                            <input type="text" id="MSSV" name="MSSV"><br><br>
                            <label for="BXX">Biển số xe:</label><br>
                            <input type="text" id="BXX" name="BXX"><br><br>
                            <label for="ngayGiuXe">Ngày giữ xe:</label><br>
                            <input type="text" id="ngayGiuXe" name="ngayGiuXe"><br><br>
                            <div>
                                <button type="button" class="btn btn-primary c-ml" id="btnCapNhat">Cập nhật</button>
                                <button type="button" class="btn btn-danger c-ml" id="btnXoa">Xóa</button>
                            </div>
                        </div>
                    </div>
                    <div class="QLX-panel">
                        <div class="QLX-panel-content">
                            <h1> TÌM KIẾM </h1>
                            <input type="text" id="search" name="search"><br />
                            <label for="searchByID">ID</label>
                            <input type="radio" id="searchByID" name="searchBy"><br />
                            <label for="searchByName">Tên</label>
                            <input type="radio" id="searchByName" name="searchBy"><br />
                            <label for="searchByBXX">Biển số xe</label>
                            <input type="radio" id="searchByBXX" name="searchBy"><br />
                            <div class="button-container">
                                <button type="button" class="btn btn-primary" id="btnSearch">Tìm kiếm</button>
                            </div>  
                        </div>
                    </div>
                </div>
                <!-- Right Iframe -->
                <div class="iframe-container">
                    <iframe src="https://example.com" title="Iframe" class="frame"></iframe>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
</body>
</html>
